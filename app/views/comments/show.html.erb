<div class="comment">
    <%= form_tag("/comments", method: "post") do %>
      <%= hidden_field_tag :user_id, value = current_user.id %>
      <%= hidden_field_tag :candy_id, value = @comment.candy_id %>
      <a href="#" class="js-next"  data-id="<%=@comment.id%>"> Next Comment</a>
      <h2 class="commentCandyName"><%= @comment.candy.name %></h2>
      <p class="commentName">Comment: <%= @comment.name %></p>
    <% end %>
</div>
<br>

<button><%= link_to 'Log Out', signout_path%></button>
<button><%= link_to 'See candies', candies_path %></button>
<button><%= link_to 'Edit Comment', edit_comment_path(@comment) %></button>
