<div>
    <h1>Candies</h1>
    <div id="sourCandies">
      <h2>Sour Candies</h2>
    </div>
  
    <div id="sweetCandies">
      <h2>Sweet Candies</h2>
    </div>
</div>

<br>
<% if current_user.employee %>
  <%= link_to 'New Candy', new_candy_path %>
<% end %>
  <%= link_to 'Log Out', signout_path %>
  <%= link_to 'User Profile', user_path(@user) %>
<br>

<script type="text/javascript" charset="utf-8">
function postCandies() {
  $.getJSON("/candies/", function(candies) {
    candies.forEach(candy => {   
    let candyHTML = "<h3><a href='/candies/" + candy.id + "'>" + candy.name + "</a></h3><br>";
      $.getJSON("/comments/", function(comments) {
        comments.forEach(u => {
          if(u.candy_id == candy.id) {
            candyHTML += `<li> ${u.name} </li>`
          }    
        })
  $("#" + candy.taste + "Candies").append(candyHTML)
    //   $("#" + candy.taste + "Candies").append("<a href='/candies/" + candy.id + "'>" + candy.name + "</a><br>");   
     });
  });
});
}
postCandies();
</script>
